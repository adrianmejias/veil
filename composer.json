{
    "name": "adrianmejias/veil",
    "description": "Autoloader for custom class instances.",
    "keywords": [
        "php",
        "autoload",
        "class",
        "instance",
        "custom"
    ],
    "license": "MIT",
    "homepage": "https://github.com/adrianmejias/veil",
    "support": {
        "issues": "https://github.com/adrianmejias/veil/issues",
        "source": "https://github.com/adrianmejias/veil"
    },
    "authors": [
        {
            "name": "Adrian Mejias",
            "email": "adrianmejias@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpunit/php-code-coverage": "^9.2",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "AdrianMejias\\Veil\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AdrianMejias\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests/ --coverage-clover clover.xml"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
